<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#159C2E" />
            <gradient android:angle="-90" android:startColor="#159C2E" android:endColor="#159C2E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#159C2E" />
            <solid android:color="#159C2E"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#15D93A" />
            <gradient android:angle="-90" android:startColor="#15D93A" android:endColor="#15D93A" />
        </shape>
    </item>
</selector>