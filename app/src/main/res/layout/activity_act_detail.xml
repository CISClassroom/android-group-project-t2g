<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="#15D93A"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_reg"
            android:text="รายชื่อผู้เข้าร่วมกิจกรรม"
            android:textColor="#FFFFFF"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/Actname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_reg"
            android:text="======ชื่อกิจกรรม======"
            android:textColor="#FFFFFF"
            android:textSize="24sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_reg"
            android:text="วันที่ :  "
            android:textColor="#000000"
            android:paddingStart="20dp"
            android:textSize="20sp"></TextView>
        <TextView
            android:id="@+id/ActDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_reg"
            android:text="[date]"
            android:textColor="#000000"
            android:textSize="20sp"></TextView>


    </LinearLayout>


    <ListView
        android:id="@+id/eachStudentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
</LinearLayout>