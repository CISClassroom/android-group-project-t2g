<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="159dp"
        android:layout_height="147dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plus" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="242dp"
        android:layout_height="73dp"
        android:layout_marginStart="77dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/kanit_bold"
        android:gravity="center"
        android:text="Activities"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="68dp"
        android:layout_marginStart="52dp"
        android:fontFamily="@font/kanit_bold"
        android:gravity="center"
        android:text="Student"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/kanit_reg"
        android:text="การเข้าร่วมกิจกรรมของนักศึกษา"
        android:textAlignment="center"
        android:textColor="#535252"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="156dp"
        android:layout_height="32dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="128dp"
        android:fontFamily="@font/kanit_reg"
        android:text="ระบบบันทึกข้อมูล"
        android:textAlignment="center"
        android:textColor="#535252"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_to_main"
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_edge"
        android:fontFamily="@font/kanit_reg"
        android:text="ถัดไป"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>